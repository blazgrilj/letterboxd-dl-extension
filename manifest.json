{
  "manifest_version": 3,
  "name": "Letterboxd DL Extension",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://letterboxd.com/*",
    "*://www.dvdsreleasedates.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://letterboxd.com/film/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
   "16": "icon.png",
   "32": "icon.png",
   "48": "icon.png",
   "128": "icon.png"
 }
}